<configuration scan="true" scanPeriod="5 seconds" debug="true">

    <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
        <encoder>
            <pattern>[%X{traceId}]-[%date{ISO8601}]-[%-5level]-[%thread]-[%logger] - %msg%n</pattern>
        </encoder>
    </appender>

    <!--    如果没有指定level 会自动继承 addtivity 指定是否向上级传递 默认为true则交给root appender-ref：配合additivity=false指定appender-->
    <logger name="com.leo.ibatis.mapper" level="debug"></logger>

    <root level="INFO">
        <appender-ref ref="STDOUT"/>
    </root>
</configuration>